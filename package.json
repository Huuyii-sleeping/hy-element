	"scripts": {
		"dev": "pnpm --filter @hy-element/play dev",
		"story": "pnpm --filter @hy-element/play storybook",
		"docs:dev": "pnpm --filter @hy-element/docs dev",
		"docs:build": "pnpm --filter @hy-element/docs build",
		"test": "run-p test-utils test-comp test-hooks",
		"test-utils": "cross-env NODE_ENV=test pnpm --filter @hy-element/utils test",
		"test-comp": "cross-env NODE_ENV=test pnpm --filter @hy-element/components test",
		"test-hooks": "cross-env NODE_ENV=test pnpm --filter @hy-element/hooks test",
		"build": "run-s build-hooks build-comp",
		"build-hooks": "cross-env NODE_ENV=production pnpm --filter @hy-element/hooks build",
		"build-comp": "cross-env NODE_ENV=production pnpm --filter hy-element build",
		"build:dev": "cross-env NODE_ENV=development pnpm --filter hy-element build:watch",
		"changed": "dotenv lerna version --conventional-commits --create-release github --yes",
		"changed:patch": "dotenv lerna version patch --conventional-commits --create-release github --yes",
		"changed:major": "dotenv lerna version major --conventional-commits --create-release github --yes",
		"release": "lerna publish from-package --yes"
	},
